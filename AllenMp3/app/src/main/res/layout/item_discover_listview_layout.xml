<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:layout_marginBottom="10dp">
    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:background="@color/black"
            android:id="@+id/DailyTopicImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/contentText"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:id="@+id/DailyContent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/DailyUserHeadImg"
                android:layout_marginRight="5dp"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <TextView
                android:textColor="@color/contentText"
                android:textSize="13sp"
                android:id="@+id/DailyUserName"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/contentText"
                android:textSize="13sp"
                android:text="分享"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/contentText"
                android:textSize="13sp"
                android:id="@+id/DailyShareCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/contentText"
                android:textSize="13sp"
                android:text="首歌"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="@color/dividerText"
        android:layout_width="match_parent"
        android:layout_height="1.5px"/>
</LinearLayout>