<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.joker.allenmp3.fragment.WebMusicFragment">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/elseText"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.joker.allenmp3.util.RefreshLayout
            android:id="@+id/DiscoverSwipeRefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:scrollbars="none"
                android:background="@color/discoverListViewBackground"
                android:id="@+id/DiscoverListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ListView>
        </com.joker.allenmp3.util.RefreshLayout>
        <ImageView
            android:background="@color/white"
            android:id="@+id/Loading"
            android:scaleType="center"
            android:src="@drawable/loading_anim"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

</FrameLayout>
