<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <RelativeLayout
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_gravity="center"
                android:textSize="17sp"
                android:text="详情"
                android:textColor="@color/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:layout_marginLeft="5dp"
            android:scaleType="centerInside"
            android:id="@+id/PreArrow"
            android:src="@mipmap/top_bar_back"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_width="25dp"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <ListView
        android:background="@color/white"
        android:divider="#00000000"
        android:id="@+id/PPlayListview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:id="@+id/web_bottom"
        android:orientation="vertical">
        <SeekBar
            android:layout_width="400dp"
            android:maxHeight="3dp"
            android:minHeight="1dp"
            android:thumb="@drawable/web_seekbar_style"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/web_seekbar"
            android:progressDrawable="@drawable/seekbar_background_style"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="52dp"
                android:layout_marginLeft="6dp"
                android:layout_height="match_parent"
                android:id="@+id/web_music_image"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="请选择歌曲"
                android:gravity="center"
                android:textSize="18sp"
                android:id="@+id/web_music_name"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="16sp"
                android:gravity="center"
                android:id="@+id/web_music_art"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>